<% const existeUsuario = typeof(usuario) != 'undefined'%>
<% let existeNombre = typeof nombre !== 'undefined' %>
<% let existeApellido = typeof apellido !== 'undefined' %>
<% let existeCedula = typeof cedula !== 'undefined' %>
<h1><%= existeUsuario ? 'Editar': 'Crear'%> Usuario</h1>
<!--Setear nombre y apellido-->
<% if(existeUsuario ){%>
<% existeNombre = true %>
<% existeApellido = true %>
<% existeCedula = true %>
<% nombre = usuario.nombre %>
<% apellido = usuario.apellido %>
<% cedula = usuario.cedula %>
<% } %>
<% if (error != undefined){%>
    <p>MENSAJE ERROR: <%= error %></p>
<% } %>
