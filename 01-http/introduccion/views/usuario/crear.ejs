<form action="/usuario/crearDesdeVista"
      method="POST">
    <% const existeNombre = typeof nombre !== 'undefined' %>
    <label for="nombreID">Nombre:</label>
    <input id="nombreID" type="text" name="nombre" value="<%= existeNombre ? nombre : '' %>">
    <br>
    <% const existeApellido = typeof apellido !== 'undefined' %>
    <label for="apellidoID">Apellido:</label>
    <input id="apellidoID" type="text" name="apellido" value="<%= existeApellido ? apellido : '' %>">
    <br>
    <% const existeCedula = typeof cedula !== 'undefined' %>
    <label for="cedulaID">Cedula:</label>
    <input id="cedulaID" type="text" name="cedula" value="<%= existeCedula ? cedula : '' %>">
    <br>
    <button type="submit">SUBMIT</button>
    <button type="reset">RESET</button>
    <button type="button">BUTTON</button>
    <button>QUE TIPO SOY?</button>
</form>


