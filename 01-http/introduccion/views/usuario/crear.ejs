<form action="<%= existeUsuario ? '/usuario/editarDesdeVista/'+usuario.id : '/usuario/crearDesdeVista/'%>"
      method="POST">

    <label for="nombreID">Nombre:</label>
    <input id="nombreID" type="text" name="nombre" value="<%= existeNombre ? nombre : '' %>">
    <br>

    <label for="apellidoID">Apellido:</label>
    <input id="apellidoID" type="text" name="apellido" value="<%= existeApellido ? apellido : '' %>">
    <br>

    <label for="cedulaID">Cedula:</label>
    <input id="cedulaID" type="text"  name="cedula" value="<%= existeCedula ? cedula : '' %>"  <%= existeUsuario ? 'disabled' : ''%>>
    <br>
    <button type="submit">SUBMIT</button>
    <button type="reset">RESET</button>
    <button type="button">BUTTON</button>
    <button>QUE TIPO SOY?</button>
</form>


